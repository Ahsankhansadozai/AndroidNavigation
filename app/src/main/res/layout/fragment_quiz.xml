<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".fragments.QuizFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hGoToWinFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz Win"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hGoToLostFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Quiz Lost"
            app:layout_constraintEnd_toEndOf="@id/hGoToWinFragment"
            app:layout_constraintStart_toStartOf="@id/hGoToWinFragment"
            app:layout_constraintTop_toBottomOf="@id/hGoToWinFragment" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>